<%- include('../partials/heading') -%>
    <a style="margin: 0px auto;" href="/posts/<%=post._id%>" class="btn btn-light">Back to Post</a>

    <div class="container" style="margin-bottom:225px;">
        <h1 style="text-align: center; margin :50px auto">edit your comment to
            <strong><%=post.title%></strong>post
        </h1>
        <form action="/posts/<%=post._id%>/comments/<%=comment._id%>?_method=PUT" , method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-dark text-info">Submit</button>
            </div>
        </form>
    </div>


    <%- include('../partials/footer') -%>