<%- include('../partials/heading') -%>

    <div class="container">
        <h1 style="text-align: center; margin :50px auto">Add new comment to
            <strong><%=post.title%></strong> post
        </h1>
        <form action="/posts/<%=post._id%>/comments" , method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="comment">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="comment[author]" placeholder="author">
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-dark text-info ">Submit</button>
            </div>
        </form>
        <div class="text-center">
            <a href="/posts/<%=post._id%>" class="btn btn-light my-4">Back to Posts</a>
        </div>

    </div>


    <%- include('../partials/footer') -%>