<%- include('../partials/heading') -%>
    <a style="margin: 0px auto;" href="/posts/<%=post._id%>" class="btn btn-warning">Back to Posts</a>

    <div class="container">
        <h1 style="text-align: center; margin :50px auto">Add new comment to
            <strong><%=post.name%></strong>
        </h1>
        <form action="/posts/<%=post._id%>/comments" , method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="comment">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="comment[author]" placeholder="author">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
        </form>
    </div>


    <%- include('../partials/footer') -%>