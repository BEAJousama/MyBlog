<%- include('partials/heading') -%>
    <div style="margin-top: 60px; padding-bottom:400px;" class="container text-center">
        <div class="class-center my-4">
            <h3>Login</h3>
        </div>
        <form action="/login" , method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="email" placeholder="Email">
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="Password">
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-dark text-info ">Login</button>
            </div>
            <p>Don' have an account Signup <a href="/register">here</a></p>
        </form>
    </div>
    <%- include('partials/footer') -%>