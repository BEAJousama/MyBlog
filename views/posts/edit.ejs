<%- include('../partials/heading') -%>

    <div class="container">
        <h1 style="text-align: center; margin : 50px auto">Edit
            <%=post.title%>
        </h1>
        <form action="/posts/<%=post._id%>?_method=PUT" , method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="post[title]" value="<%=post.title%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="post[image]" value="<%=post.image%>">
            </div>
            <div class="form-group">
                <textarea class="form-control" type="text" name="post[text]"><%=post.text%></textarea>
            </div>

            <div class=" form-group text-center">
                <button type="submit" class="btn btn-dark text-info">Submit</button>
            </div>
            <div class="text-center">
                <a href="/" class="btn btn-light my-3 ">Back to posts</a>
            </div>
    </div>
    </form>
    </div>


    <%- include('../partials/footer') -%>