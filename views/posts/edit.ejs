<%- include('../partials/heading') -%>

    <div class="container">
        <h1 style="text-align: center; margin :50px auto">Edit
            <%=post.title%>
        </h1>
        <form action="/posts/<%=post._id%>?_method=PUT" , method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="post[title]" value="<%=post.title%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="post[image]" value="<%=post.image%>">
            </div>
            <div class="form-group">
                <textarea class="form-control" type="text" name="post[text]"><%=post.text%></textarea>
            </div>

            <div class=" form-group text-center">
                <button type="submit " class="btn btn-primary btn-block ">Submit</button>
            </div>
            <div class="text-center"> <a style="margin: 0px auto;" href="/" class="btn btn-dark">Back to Posts</a>
            </div>
        </form>
    </div>


    <%- include('../partials/footer') -%>