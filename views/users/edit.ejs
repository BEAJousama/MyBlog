<%- include('../partials/heading') -%>
    <a style="margin: 0px auto;" href="/" class="btn btn-light">Back to main page</a>

    <div class="container" style="margin-bottom:225px;">
        <h1 style="text-align: center; margin :50px auto">edit user
            <strong><%=user.username%></strong>
        </h1>
        <form action="/users/<%=user._id%>?_method=PUT" , method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="user[username]" value="<%=user.username%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[email]" value="<%=user.email%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[image]" value="<%=user.image%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[role]" value="<%=user.role%>">
            </div>


            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
        </form>
    </div>


    <%- include('../partials/footer') -%>