<%- include('../partials/heading') -%>

    <div class="container">
        <h1 style="text-align: center; margin :50px auto">Add new user
        </h1>
        <form action="/users/new" , method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="user[image]" placeholder="picture">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[role]" placeholder="role">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[username]" placeholder="username">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[email]" placeholder="email">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="password" placeholder="password">
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-dark text-info">Submit</button>
            </div>
        </form>
        <div class="text-center">
            <a href="/" class="btn btn-light my-3 ">Back to main page</a>
        </div>
    </div>


    <%- include('../partials/footer') -%>
        </div>